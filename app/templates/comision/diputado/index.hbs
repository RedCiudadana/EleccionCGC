<div class="container">

  <div class="row border my-4">
    <div class="col-md-3 p-4">
      <img
          src="{{model.diputado.fotoPerfil}}"
          alt="{{model.diputado.nombre}}"
          border="0"
          class="img-responsive center-block w-100"
        >
    </div>

    <div class="col-md-5 p-4 d-block d-sm-flex">
      <div class="w-50 text-left">
        <h2>{{model.diputado.nombre}}</h2>
        <table class="table">
          <tbody>
              <tr>
                <td class="border-0 p-0">
                  <small>
                    <strong>Cargo:</strong>
                    {{model.diputado.cargo}}
                  </small>
                </td>
              </tr>
              <tr>
                <td class="border-0 p-0">
                  <small>
                    <strong>Institución:</strong>
                    {{model.diputado.institucion}}
                  </small>
                </td>
              </tr>
              <tr>
                <td class="border-0 p-0">
                  <small>
                    <strong>Profesión:</strong>
                    {{model.diputado.profesion}}
                  </small>
                </td>
              </tr>
              <tr>
                <td class="border-0 p-0">
                  <small>
                    <strong>Fecha de Nacimiento:</strong>
                    {{model.diputado.fechaNacimiento}}
                  </small>
                </td>
              </tr>
              <tr>
                <td class="border-0 p-0">
                  <small>
                    <strong>Lugar de Nacimiento:</strong>
                    {{model.diputado.lugarNacimiento}}
                  </small>
                </td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="col-md-4 social-side text-center d-block p-4">
      <div>
        <img src="{{model.diputado.fotoUrlPartido}}" alt="{{model.diputado.partidoactual}}">
        {{#each documentosDisponibles as |documento|}}
          <p class="datos-abiertos">
            <a
              href="{{documento.urlDocumento}}"
              class="btn btn-primary w-100 text-white"
              target="_blank"
              style="font-weight: 400;"
            >
              {{documento.nombreDocumento}}
            </a>
          </p>
        {{/each}}
      </div>
      <div class="d-flex mt-3">
        <div class="mr-2">
          <a href="{{mode.diputado.tw}}" target="_blank"><i class="fa fa-twitter mr-1"></i>{{model.diputado.tw}}</a>
        </div>
        <div>
          <a href="{{model.diputado.fb}}" target="_blank"><i class="fa fa-facebook mr-1"></i>{{model.diputado.nombre}}</a>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="panel">
        <div class="header d-flex"><img src="img/logo-documento.png" alt="Biografía" height="75"><h4>Biografía</h4></div>
        <div class="body">
          {{model.diputado.biografia}}
        </div>
      </div>
    </div>
  </div>

</div>