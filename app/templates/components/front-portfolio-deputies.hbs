<div id="portfolio" class="portfolio clearfix">
  {{#each perfiles as |perfil|}}
    <article class="item {{perfil.selector}}">
      <div class="background bg-light">

        <div class="image">
          {{#link-to 'comision.diputado' perfil.id}}
            <img alt="{{perfil.cargoNombreCompleto}}" src="{{perfil.fotoPerfil}}" />
          {{/link-to}}
        </div>

        <div class="text w-75 mx-auto my-2">
          <h6>{{perfil.nombre}}</h6>
          <h6 class="font-weight-light {{perfil.badgeColor}} rounded text-white p-1">{{perfil.institucion}}</h6>
        </div>

      </div>
    </article>
  {{/each}}
</div>
